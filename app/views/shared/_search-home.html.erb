<div class="banner--home__search">
  <%= form_tag trips_path, method: :get do %>

    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Start location"
    %>

    <%= text_field_tag :date,
      params[:date],
      class: "form-control",
      placeholder: 'Select a date'
    %>

    <%= button_tag id: "search", class: "btn btn--primary" do %>
      Search<%= icon('fa', 'search') %>
    <% end %>
  <% end %>
</div>
