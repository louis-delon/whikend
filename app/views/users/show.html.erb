<div class="container">
  <div class="user__box">
    <div class="user__title">
      <h1>Profile of <%= @user.first_name %> </h1>
      <p>
        <% user_avatar = current_user.facebook_picture_url || current_user.avatar || "default-avatar.png" %>
        <%= image_tag user_avatar, class: "avatar__profile" %>
      </p>
    </div>

    <div class="user__details">
      <% if policy(@user).edit? %>
        <ul style="list-style-type: none;">
         <li><%= " First name: #{@user.first_name}" %></li>
         <li><%= " Last name: #{@user.last_name}" %></li>
         <li><%= " Email: #{@user.email}" %></li>
         <li><%= " Age: #{@user.age}" %></li>
         <li><%= link_to "Edit Profile", edit_user_path(@user), class: "btn btn-success" %>
         </li>
        </ul>
      <% else %>
        <ul style="list-style-type: none;">
          <li><%= " #{@user.first_name}" %></li>
          <li><%= " #{@user.age}" %></li>
        </ul>
      <% end %>
    </div>
    <div class="user__reviews">
      <ul style="list-style-type: none;">
        <%= "reviews of #{@user.first_name}" %>
        <% @user.reviews.each do |review|%>
          <div class="user__review__id">
            <li class="user__reviews__created_at"><%= review.created_at %></li>
            <li class="user__reviews__content"><%= review.content %></li>
          </div>
        <% end %>
      </ul>
    </div>
  </div>
</div>
