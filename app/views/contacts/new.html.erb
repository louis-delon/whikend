<section id="new__trip">
  <div class="container">
    <div class="col-lg-8 col-lg-offset-2">
      <div class="new__trip__title">
        <h1>Contact Us</h1>
      </div>

      <%= simple_form_for @contact , url: contact_index_path do |f| %>
        <%= f.error_notification %>


        <div class="new__trip__step">
          <h2>Step 2 - Give details about your trip</h2>

          <div class="form-inputs">
            <%= f.input :email, placeholder: "Give us en email to answer you" %>
          </div>

          <div class="form-inputs">
            <%= f.input :content, placeholder: "What's your message" %>
          </div>
        </div>

        <div class="new__trip__actions">
          <%= link_to "Cancel", root_path %>
          <%= button_tag class: "btn btn--primary" do %>
            Send<%= icon('fa', 'location-arrow') %>
          <% end %>
        </div>
      <% end %>

    </div>
  </div>
</section>
