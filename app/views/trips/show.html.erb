<h1><%= "Join the trip of #{@trip.user.first_name}" %></h1>
<p><%= @trip.description %></p><br>

<p><%= @trip.location %></p><br>

<p><%= @trip.date %></p><br>

<p><% @submissions.where(accepted:true).each do |submission| %>
    <%= submission.user.first_name  %>
   <% end %>
</p>

<br>

<ul>
  <% @messages.each do |message| %>
     <li><%= message.content %></li><br>
  <% end %>
</ul>

<br>

<div>
  <% if policy(@trip).update? %>
    <%= link_to(edit_trip_path(@trip), class: "btn btn--secondary") do %>
      <%= icon('fas', 'edit') %>Edit
    <% end %>
  <% end %>

  <% if policy(@trip).destroy?%>
    <%= link_to(trip_path(@trip), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn--secondary") do %>
      <%= icon('fas', 'trash') %>Delete
    <% end %>
  <% end %>

  <% if policy(@review).create?%>
    <%= link_to(new_trip_review_path(@trip), class: "btn btn--secondary") do %>
      <%= icon('fas', 'trash') %>Add a Review
    <% end %>
  <% end %>
</div>

