<div class="trip__message__list">
  <% @messages.each do |message| %>
    <div class="trip__message">
      <div class="trip__message__avatar">
        <% user_avatar = message.user.facebook_picture_url || message.user.avatar || "default-avatar.png" %>
        <%= cl_image_tag user_avatar, class: "avatar", crop: :thumb, gravity: :face, width: 300, height: 300 %>
      </div>
      <div class="trip__message__content">
        <p><%= message.user.first_name.capitalize %> - <%= message.created_at.strftime("%m/%d/%y") %></p>
        <p><%= message.content %></p>
      </div>
    </div>
  <% end %>
</div>

<div class="trip__message__form">
  <%= simple_form_for [@trip, @message] do |f| %>
    <%= f.input :content, placeholder: "You can ask questions or just say hi to your buddies!" %>
    <%= button_tag class: "btn btn--secondary" do %>
      Send your message<%= icon('fas', 'comments') %>
    <% end %>
  <% end %>
</div>
