<div class="trip__message__list">
  <% @messages.each do |message| %>
    <div class="trip__message">
      <div class="trip__message__avatar">
        <% user_avatar = @user.facebook_picture_url || message.user.avatar %>
        <%= cl_image_tag user_avatar, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown", crop: :thumb, gravity: :face %>
      </div>
      <div class="trip__message__content">
        <p><%= message.user.first_name.capitalize %> - <%= message.created_at %></p>
        <p><%= message.content %></p>
      </div>
    </div>
  <% end %>
</div>

<div class="trip__message__form">
  <%= simple_form_for [@trip, @message] do |f| %>
    <%= f.input :content %>
    <%= button_tag class: "btn btn--primary" do %>
      <%= icon('fas', 'comments') %> Send your message
    <% end %>
  <% end %>
</div>
